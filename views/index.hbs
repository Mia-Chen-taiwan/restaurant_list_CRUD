<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png" width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <a href="./restaurants/new">
        <button type="submit" class="btn btn-info">
          <i class="fas fa-plus pr-2"></i>新增餐廳
        </button>
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="dropdown mb-3 text-right">
        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          排序方式
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="/sort/name/asc">餐廳名稱 (A-Z)</a>
          <a class="dropdown-item" href="/sort/name/desc">餐廳名稱 (Z-A)</a>
          <a class="dropdown-item" href="/sort/category/asc">餐廳類別</a>
          <a class="dropdown-item" href="/sort/rating/desc">評分 (高-低)</a>
          <a class="dropdown-item" href="/sort/rating/asc">評分 (低-高)</a>
        </div>
      </div>

      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <div class="cover">
              <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            </div>
            <div class="card-body p-3">
              <h5 class="card-title mb-1 font-weight-bold">{{ this.name }}</h5>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div class="d-flex justify-content-end mt-2">
                <a href="/restaurants/{{ this._id }}/edit">
                  <button class="btn btn-outline-primary btn-sm p-1 ml-2">
                    <i class="fas fa-edit px-1"></i>
                  </button>
                </a>
               <a href="/restaurants/{{ this._id }}/delete" style="display: inline;">
                 <button type="submit" class="btn btn-outline-danger btn-sm p-1 ml-2">
                   <i class="fas fa-trash-alt px-1"></i>
                 </button>
               </a>
              </div>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>